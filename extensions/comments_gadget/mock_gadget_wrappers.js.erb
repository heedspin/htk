function htkRequest(method, url, data, callback) {
  var request_data = null;
  if (data instanceof Array) {
  	request_data = new Object();
	  for (var index in data) {
	    for (var key in data[index]) {
	    	var value = data[index][key];
	    	var exists = request_data[key];
	      if (exists) {
	      	if (exists instanceof Array) {
	      		exists.push(value);
	      	} else {
	      		request_data[key] = [exists, value];
	      	}
	      } else {
	      	request_data[key] = value
	      }
	    }
	  }  	
  } else {
  	request_data = data
  }
	request_data["opensocial_owner_id"] = 'mock user';
	request_data["opensocial_container"] = 'mock container';
	$.ajax({
		url: gadget_host_url + url,
		type: method,
		dataType: 'json',
		data: request_data
	}).done(function(response) {
		callback({rc: 200, data: response, errors: [] });
	}).fail(function(xhr, exception){
		callback({rc: xhr.status, data: xhr.responseText, errors: [ method + " failed" ]});
	});
}
