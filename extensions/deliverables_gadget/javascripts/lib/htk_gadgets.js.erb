function htkGetContentMatches(keys) {
  var matches = getContentMatches();
  var result = [];
  for (var match in matches) {
    for (var key in matches[match]) {
      if ((keys == null) || ($.inArray(key, keys) >= 0)) {
        var obj = new Object();
        obj[htkKeyMap[key] || key] = matches[match][key];
        result.push(obj);
      }
    }
  }
  return result;
}